---
layout: base.njk
title: SYMPHAGOS — Wake the Wild, Sonic Seekers
heroCaption: "Fig. I — Planet Symphagos."
bodyClass: home-page
---

<style>
header {
    border-bottom: none !important;
}
/* regular styles */
.hero-image-container {
    border: none !important;
    box-shadow: none !important;
}
.hero-overlay {
    position: absolute !important;
    top: 45% !important;
    left: 50% !important;
    transform: translate(-50%, -50%) !important;
    text-align: center !important;
}
.filter-group select {
    display: block !important;
    height: auto !important;
    border: 1px solid var(--ink-faded) !important;
    padding: 0.5rem !important;
    background: var(--parchment-light) !important;
}
/* mobile styles */
@media (max-width: 768px) {
    .hero-overlay {
        top: 42% !important;
    }
    .hero-logo {
        width: 400px !important;
        margin-bottom: 0.5rem !important;
    }
    .hero-tagline {
        font-size: 2rem !important;
    }
    .hero-image {
        height: 40vh !important;
        min-height: 350px !important;
    }
    .hero-image-container {
        margin-bottom: 0 !important;
    }
    .hero {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }
header nav a {
    font-size: 0.9rem !important;
}
    .specimens-section {
        padding-top: 2rem !important;
    }
    .filter-controls {
        display: flex !important;
        gap: 1rem !important;
    }
    .filter-group {
        flex: 1 !important;
    }
}
</style>

<!-- MANUAL HEADER FOR HOMEPAGE -->
<header style="background: #f4e4bc; padding: 1.5rem 2rem; text-align: center; border-bottom: 2px solid #6b5d4a;">
    <nav style="margin-bottom: 1rem; white-space: nowrap;">
        <a href="/#specimens" style="font-family: 'IM Fell English SC', Georgia, serif; color: #4a3c28; text-decoration: none; margin: 0 1.5rem; font-size: 1.3rem; letter-spacing: 0.1em;">Specimens</a>
        <a href="/contact/" style="font-family: 'IM Fell English SC', Georgia, serif; color: #4a3c28; text-decoration: none; margin: 0 1.5rem; font-size: 1.3rem; letter-spacing: 0.1em;">Communications</a>
    </nav>
</header>

<!-- HERO SECTION -->
<section class="hero">
    <div class="hero-image-container">
        <div class="hero-image has-image" style="background-image: url('images/Symphagos_Header_Img_large.webp');">
            <div class="hero-overlay">
                <img src="/images/symphagos_logo_white.svg" alt="Symphagos" class="hero-logo">
                <p class="hero-tagline">Wake the Wild, Sonic Seekers</p>
            </div>
        </div>
    </div>
</section>

<!-- NEWSLETTER BUTTON -->
<div style="text-align: center; padding: 2rem 0;">
    <a href="#" id="relay-request" class="acquire-button-large" style="display: inline-block; background: #2c2416; color: #f4e4bc; padding: 1rem 3rem; font-family: 'IM Fell English SC', serif; font-size: 1.2rem; text-decoration: none; letter-spacing: 0.1em; transition: all 0.3s ease;">REQUEST REGULAR RELAYS</a>
</div>

<!-- SPECIMENS SECTION -->
<section class="specimens-section" id="specimens">
    <h2 class="section-title">DOCUMENTED SPECIMENS</h2>
    <p class="section-subtitle">Catalogued sonic lifeforms, available for acquisition</p>
    
    <!-- FILTERS -->
    <div class="filter-controls">
        <div class="filter-group">
            <label>Type:</label>
            <select id="filter-type">
                <option value="all">All Specimens</option>
                <option value="Species">Species</option>
                <option value="Soundscape">Soundscape</option>
            </select>
        </div>
        <div class="filter-group">
            <label>Sort:</label>
            <select id="filter-sort">
                <option value="date-new">Newest First</option>
                <option value="date-old">Oldest First</option>
                <option value="price-low">Price: Low to High</option>
                <option value="price-high">Price: High to Low</option>
            </select>
        </div>
    </div>
    
    <div class="specimens-grid">
        {% for specimen in collections.specimens %}
        <article class="specimen-card" 
                 data-type="{{ specimen.data.type | default('Species') }}"
                 data-price="{{ specimen.data.priceValue | default(0) }}"
                 data-date="{{ specimen.data.dateAdded | default('2025-01-01') }}">
            <span class="specimen-number">SPECIMEN NO. {{ specimen.data.specimenNumber | string | padStart(3, '0') }}</span>
            <div class="specimen-image" {% if specimen.data.image %}style="background-image: url('/images/{{ specimen.data.image }}')"{% endif %}>
                {% if not specimen.data.image %}<span>[ Creature illustration ]</span>{% endif %}
            </div>
            <h3 class="specimen-name"><a href="/{{ specimen.fileSlug }}/" style="color: inherit; text-decoration: none;">{{ specimen.data.name }}</a></h3>
            <p class="specimen-class">Class: {{ specimen.data.class }}</p>
        <div class="specimen-description">{{ specimen.data.description | safe }}</div>
            <div class="specimen-footer">
                <span class="specimen-price {% if specimen.data.price == 'FREE' %}free{% endif %}">
                    {% if specimen.data.price == 'FREE' %}FREE — Introductory Specimen{% else %}{{ specimen.data.price }}{% endif %}
                </span>
                <a href="/{{ specimen.fileSlug }}/" class="acquire-btn">VIEW SPECIMEN</a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>

<!-- FILTER JAVASCRIPT -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const typeFilter = document.getElementById('filter-type');
    const sortFilter = document.getElementById('filter-sort');
    const grid = document.querySelector('.specimens-grid');
    const cards = Array.from(document.querySelectorAll('.specimen-card'));
    
    function filterAndSort() {
        const typeValue = typeFilter.value;
        const sortValue = sortFilter.value;
        
        // Filter
        let filtered = cards.filter(card => {
            if (typeValue === 'all') return true;
            return card.dataset.type === typeValue;
        });
        
        // Sort
        filtered.sort((a, b) => {
            switch(sortValue) {
                 case 'date-new':
                    const dateCompare = new Date(b.dataset.date) - new Date(a.dataset.date);
                    if (dateCompare === 0) {
                        // If dates are equal, sort by specimen number (higher first)
                        return parseInt(b.querySelector('.specimen-number').textContent.match(/\d+/)[0]) - 
                               parseInt(a.querySelector('.specimen-number').textContent.match(/\d+/)[0]);
                    }
                    return dateCompare;
                case 'date-old':
                    return new Date(a.dataset.date) - new Date(b.dataset.date);
                case 'price-low':
                    return parseInt(a.dataset.price) - parseInt(b.dataset.price);
                case 'price-high':
                    return parseInt(b.dataset.price) - parseInt(a.dataset.price);
                default:
                    return 0;
            }
        });
        
        // Hide all
        cards.forEach(card => card.style.display = 'none');
        
        // Show and reorder filtered
        filtered.forEach(card => {
            card.style.display = '';
            grid.appendChild(card);
        });
    }
    
typeFilter.addEventListener('change', filterAndSort);
    sortFilter.addEventListener('change', filterAndSort);
    
    // Run on page load to apply default sort
    filterAndSort();
});
</script>
